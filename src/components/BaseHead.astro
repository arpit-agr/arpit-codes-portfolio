<meta
	name="theme-color"
	content="Thistle"
	media="(prefers-color-scheme: light)"
/>
<meta
	name="theme-color"
	content="hsl(0deg 0% 5%)"
	media="(prefers-color-scheme: dark)"
/>

<link rel="me" href="https://indieweb.social/@arpit" />
<meta name="generator" content={Astro.generator} />
