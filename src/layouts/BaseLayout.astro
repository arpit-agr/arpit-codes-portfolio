---
/* Type imports */
import type { ComponentProps } from "astro/types";

/* Regular imports (components, assets, constants, etc.) */
import BaseHead from "@components/BaseHead.astro";

/* Interface Props */
type Props = ComponentProps<typeof BaseHead>;

/* Extract props */
const {
	pageTitle,
	pageDesc,
	ogLocale,
	ogType,
	socialImageURL,
	socialImageAlt,
	canonicalURL,
} = Astro.props;

/** Other local constants or functions */
---

<!doctype html>
<html lang="en" class="no-js">
	<head>
		<BaseHead
			pageTitle={pageTitle}
			pageDesc={pageDesc}
			ogLocale={ogLocale}
			ogType={ogType}
			socialImageURL={socialImageURL}
			socialImageAlt={socialImageAlt}
			canonicalURL={canonicalURL}
		/>
	</head>
	<body>
		<!-- Content -->
		<slot />
	</body>
</html>
